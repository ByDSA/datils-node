{
  "compilerOptions": {
    "strict": true,
    "module": "es2020",
    "declaration": true,
    "removeComments": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["**/*.spec.ts"]
}
